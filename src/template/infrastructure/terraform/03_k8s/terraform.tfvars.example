# Example Terraform variables file for the AKS infrastructure
# Copy this file to terraform.tfvars and customize the values

# Azure Subscription Configuration
subscription_id = "f20b0dac-53ce-44d4-a673-eb1fd36ee03b"

# Project Configuration
project_name = "aks-cluster"
environment  = "dev"

# Azure Region
location = "West Europe"

# Common Tags
tags = {
  Project     = "aks-cluster"
  ManagedBy   = "Terraform"
  Owner       = "Genocs"
  Environment = "dev"
}

# Network Configuration
vnet_address_space                = ["10.0.0.0/16"]
aks_subnet_address_prefix         = "10.0.1.0/24"
appgw_subnet_address_prefix       = "10.0.2.0/24"
nat_gateway_subnet_address_prefix = "10.0.3.0/24"

# AKS Configuration
kubernetes_version     = "1.33.0"
node_count             = 2
node_vm_size           = "Standard_B2s"
enable_auto_scaling    = false
# min_count and max_count are not used when enable_auto_scaling = false
enable_private_cluster = false

# Network Plugin Configuration
network_plugin = "azure"
network_policy = "azure"
dns_service_ip = "10.1.0.10"
service_cidr   = "10.1.0.0/16"
pod_cidr       = "10.244.0.0/16"

# Application Gateway Configuration
appgw_sku_name                    = "WAF_v2"
appgw_sku_tier                    = "WAF_v2"
appgw_capacity                    = 2
appgw_public_ip_allocation_method = "Static"

# Monitoring Configuration
log_analytics_retention_days = 30
enable_oms_agent             = true

# Security Configuration
enable_rbac              = true
enable_azure_policy      = true
enable_workload_identity = true
enable_oidc_issuer       = true

# Key Vault Configuration
key_vault_sku_name                    = "standard"
key_vault_enable_rbac_authorization   = true
key_vault_enable_soft_delete          = true
key_vault_soft_delete_retention_days  = 90
key_vault_enable_purge_protection     = true

# Key Vault Network ACLs (optional - leave empty for default "Allow" access)
key_vault_network_acls = {
  default_action             = "Allow"
  bypass                     = "AzureServices"
  virtual_network_subnet_ids = []
  ip_rules                   = []
}